.allComments{
  background:white;
  width: 100%;
  height: 220rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.comment_top{
  height: 110rpx;
  /* border: 1rpx solid skyblue; */
  display:flex;/*Flex布局*/
  display: -webkit-flex; /* Safari */
  align-items:center;/*指定垂直居中*/
}
.comment_bottom{
  height: 110rpx;
  /* border: 1rpx solid tomato; */
  padding: 0rpx 0rpx 0rpx 140rpx;
}

.img{
   width: 80rpx; 
   height: 80rpx;
   border-radius: 8rpx;
   margin:0rpx 30rpx;
}
.btn{
  height: 55rpx;
  width: 140rpx;
  line-height: 50rpx;
  background:rgb(248,161,32); 
  color: white;
  border-radius: 99rpx;
  font-size: 15rpx;
  letter-spacing:3rpx;

}
.btn_box{
  width: 140rpx;
  position: absolute;
  right:30rpx;
}

.title{
  font-size: 30rpx;
  display: block;
}
.time{
  font-size: 20rpx;
  color: gray; 
  display:  block;
  
}
.name,.money{
  font-size: 26rpx;
}
.money{
  position: absolute;
  right:30rpx;
  margin-top: 45rpx;
}

.arrowUp:after {
    content: '';
    display: inline-block;
    width: 18rpx;
    height: 18rpx;
    border-top: 1px solid black;
    border-right: 1px solid black;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
}

