// pages/shop/shop-list/shop-list.js
//因为函数中用到了network
var network = require("../../../utils/network.js")
Page({

  /**
   * 页面的初始数据
   */
  data: {
    shopName:'',
    shopImg:'',
    lists:[],
    page:'0',
    typeid:'',
    totalPage:'1',
    isLoading: false,//是否正在加载
    hasData: true,//下拉刷新有无更多数据
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    console.log(options);
    this.setData({
      typeid: options.typeid
    })
    this._getShops(); 
    
    
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
    
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
    
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
    
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    this._getShops();
    //关闭下拉刷新
    wx.stopPullDownRefresh()
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    this._getShops();
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
    
  },
  _getShops: function (){
    
    //获取本地数据
    var that=this;//申明全局变量
    //从同步缓存中获得对应内容
    var city_id=wx.getStorageSync('location').cityObj.city_id;
    var map_point = wx.getStorageSync('location').locationOther;
    var page=that.data.page;
    var totalPage = that.data.totalPage;
    var typeid=that.data.typeid;
    if (page < totalPage){
      //加上typeid是为了选取该页面的列表
      //网络登录请求
      //获取美食类的商家
      network.request("search/shop", { city_id: city_id, map_point: map_point, type: 0, sort: 0, page: 1, pageSize: 10} ,res => {
        var list = that.data.lists;
        console.log(res)
        that.setData({
          //获得res下面的result下面的items
          lists: list.concat(res.result.items),
          page: ++page,
          totalPage: res.result.totalPages,
        })
      }, res => {
      }, "加载中")
    }else{
      that.setData({
        hasData: false, 
      })
    }
   
  }
})