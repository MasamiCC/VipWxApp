.section {
  height: auto;
  width: 100%;
  background: #fff;
  position: absolute;
  z-index: 11;
}

.section input {
  width: 90%;
  margin: 5px auto;
  border: 1px solid #c3c3c3;
  height: 30px;
  border-radius: 3px;
  padding: 0 5px;
}

.map_container {
  position: absolute;
  top: 42px;
  bottom: 80px;
  left: 0;
  right: 0;
  z-index: 5;
}

.map {
  width: 100%;
  height: 100%;
}

.map_text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}

text {
  margin: 5px 0;
  display: block;
  font-size: 12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.h1 {
  margin: 15px 0;
  font-size: 15px;
}

/*展示*/

.map_show {
  position:absolute;
  z-index:10;
  background:#fff;
  left:2px;
  right:0;
  width:100%;
  height:100%;
  padding:0px 15px;
  margin:10px 0;
  font-size:16px;
  line-height:1.5;
  top:32px;
}
