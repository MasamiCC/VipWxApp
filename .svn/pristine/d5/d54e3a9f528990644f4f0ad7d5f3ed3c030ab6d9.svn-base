/* pages/leftSlide/leftSlide.wxss */

.item-wrapper{
    width: 100%; 
    overflow: hidden;
}

.item-list{
    position: relative;
    /* width: 100%; */
    height: 175rpx;
    /* margin: 0 15rpx */
}

.item-info, .item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
}

.item-info{
    display: flex;
    /* padding: 20rpx 20rpx 20rpx 0; */
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
    position: relative;
    padding: 10px 0
}



.item-oper{
    display: flex;
    justify-content: flex-end;
}

.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    z-index: 1;
    color: white;
    background: red;
}

.info-img{
     flex: 1;
   line-height: 0;font-size: 0
}

.info-img image{width: 240rpx;height: 135rpx;margin: 0 15rpx}

.info-wrapper{
    flex: 2;
    max-width:63%;
    display: flex;flex-direction: column;
    justify-content: space-between
}

.info-desc{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 6rpx;
}

.info-desc .name{
    font-size: 30rpx;
    color: black;
    font-weight: 500;
}

.info-desc .time{
    font-size: 24rpx;
    color: #999;
}

.info-content{
    font-size: 28rpx;
    color: #999;
    margin-top: 0;
    text-overflow:ellipsis;
overflow:hidden;
white-space:nowrap;

}
.info-scores{
  font-size: 26rpx;
  color: #333;
  justify-content: flex-end
}