/* pages/Components/shop-item/shop-item.wxss */
.item-info, .item-oper{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #ccc;
}
.item-info>view{line-height: 0;}
.item-info{
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
    position: relative;
    padding: 10rpx 0; 
}
.item-oper{
    display: flex;
    justify-content: flex-end;
}
.oper-delete{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    z-index: 1;
    color: white;
    background: red;
}
.info-img{
   flex: 1;
   line-height: 0;font-size: 0
}
.info-img image{width: 215rpx;height: 284rpx;margin: 0 10rpx;}

.info-wrapper{
    flex: 2;
    max-width:63%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: absolute;
    right:15rpx;
    top:200rpx;
}
.info-desc{
    display: flex;
    flex-direction: row;
    justify-content: space-between; 
    margin-top: 6rpx; 
    width:215rpx;
    padding-left:12rpx;
} 

.info-desc .name{
    font-size: 30rpx;
    color: black;
    font-weight: 500;
    overflow:hidden;
    /* 文字隐藏后添加省略号 */
    text-overflow:ellipsis;
    /* 强制不换行 */
    white-space:nowrap;
    line-height:58rpx;
    height:68rpx;
}
.info-desc .time{
    font-size: 24rpx;
    color: #999;
}

.info-content{
    display: none;
    font-size: 28rpx;
    color: #999;
    margin-top: 0;
    text-overflow:ellipsis;
    overflow:hidden;
    white-space:nowrap;
}
.info-scores{
  font-size: 24rpx;
  color:#d0871d;
  justify-content: flex-end;
    background: rgba(34,25,16,0.9);
    text-align: center;
    padding: 5rpx 0;
    overflow: hidden;
}
.info-scores> .num{
   vertical-align: middle;
    width: 30rpx;
    display: inline-block;
    white-space: normal;
    line-height: 34rpx;
    border-right: 1px solid #d4ac57;
    padding:0 10rpx;
}
.info-scores>.fig{
  padding: 0 20rpx;
}
.disinline{
  display: inline-block;
}
.content_title{
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  line-height: 1.2;
  padding-bottom: 7px;
}
.redsfont{
  color: #ff5c68;
}
.smallicon{
  width: 30rpx;
  height: 34rpx;
  margin: 0 5px;
}
.content_line{
  color: #666666;
  line-height: 2;
  font-size: 28rpx;
}
.itemssearch .item-info{
  border-bottom: 0px;
}
.itemssearch{
  padding:35rpx 0rpx;
  border-bottom: 1px solid #eeeeee;
}
.fontsicon{
  font-size: 30rpx;
}
.searchmain>view{
  display: inline-block;
}
.searchmain{
  font-size: 0;
  line-height: 0;
}
.info-mian-con,.searchshoppic{
  vertical-align: top;
}
.searchshoppic{
  width: 26.5%;
}


.info-mian-con{
  width: 73.5%;
}
.searchshoppicconpic{
  /* width: 100%; */
  width: 195rpx;
  height: 195rpx;
}
.info-mian{
  margin-left: 30rpx;
}
.fontsicon{
  width: 20px;
  height: 20px;
  line-height: 20px;
  background: #f85b79;
  margin-right: 5px;
  color: #fff;
  border-radius: 4px;
  text-align: center;
}
.quanicon{
  background: #fabd76;
}
.jianicon{
  background: #3da0f1;
}
.zhe{
  background: #C187E9;
}

